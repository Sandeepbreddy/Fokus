{
    "manifest_version": 3,
    "name": "Fokus - Content Blocker",
    "version": "1.0.0",
    "description": "Cross-browser extension to block adult content and maintain focus on productive activities with cloud sync",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "src/background/main.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "src/content/unified-blocker.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "src/ui/popup/popup.html",
        "default_title": "Fokus - Content Blocker"
    },
    "options_page": "src/ui/options/options.html",
    "options_ui": {
        "page": "src/ui/options/options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/ui/blocked/blocked.html",
                "src/ui/blocked/blocked.js",
                "src/ui/options/options.html",
                "src/services/supabase-client.js",
                "config/config.json"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'; connect-src 'self' https://*.supabase.co https://raw.githubusercontent.com;"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}